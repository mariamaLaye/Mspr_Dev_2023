pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], 
                          userRemoteConfigs: [[url: 'https://github.com/mariamaLaye/Mspr_Dev_2023.git']]])
            }
        }
        
        stage('Build and Compile') {
            steps {
                script {
                    // Change to the directory where your files reside
                    dir('modele') {
                        // List all files in the directory
                        def files = sh(returnStdout: true, script: 'ls -1').trim().split('\n')
                        
                        // Loop through each file
                        for (def file in files) {
                            // Build command
                            sh "build-command ${file}"
                            
                            // Compile command
                            sh "compile-command ${file}"
                        }
                    }
                }
            }
        }
    }
}
